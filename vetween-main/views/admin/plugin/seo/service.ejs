<!DOCTYPE html>
<html lang="ko">
  <head>
    <title><%= pageTitle %></title>
    <%- include('../../../head') %>
    <%- include('../../head') %>
  </head>
  <body>
    <%- include('../../../header') %>
    <main>
      <article>
        <div class="wrap">
          <%- include('../../header') %>
          <h2>서비스 목록</h2>
          <table>
            <thead>
              <tr>
                <th>타입</th>
                <th>제목</th>
                <th>요약</th>
                <th>포인트</th>
                <th>베스트</th>
                <th>표시 순서</th>
                <th>수정</th>
                <th>삭제</th>
                <th>표시</th>
                <th>상세</th>
              </tr>
            </thead>
            <tbody>
              <% services.forEach(s => { %>
              <form action="/admin/service/edit/<%= s.id %>" method="POST">
                <input type="hidden" name="status" value="<%= s.status %>">
                <tr>
                  <td>
                    <select name="type">
                      <option value="package"<% if (s.type === 'package') { %> selected<% } %>>패키지</option>
                      <option value="product"<% if (s.type === 'product') { %> selected<% } %>>상품</option>
                    </select>
                  </td>
                  <td><input type="text" name="title" value="<%= s.title %>" placeholder="제목"></td>
                  <td><input type="text" name="summary" value="<%= s.summary %>" placeholder="요약"></td>
                  <td><input type="text" name="point" value="<%= s.point %>" placeholder="포인트"></td>
                  <td><input type="checkbox" name="best" value="1" <% if (s.best) { %> checked<% } %>></td>
                  <td><input type="text" name="viewOrder" value="<%= s.viewOrder %>" placeholder="표시 순서"></td>
                  <td><button name="submit" value="edit">수정</button></td>
                  <td><button name="submit" value="delete">삭제</button></td>
                  <td>
                    <% if (s.status) { %>
                    <button name="submit" value="status">표시함</button>
                    <% } else { %>
                    <button name="submit" value="status">표시안함</button>
                    <% } %>
                  </td>
                  <td><a href="/admin/service/detail/<%= s.id %>"><button type="button">상세설정</button></a></td>
                </tr>
              </form>
              <% }) %>
            </tbody>
          </table>
          <h2>새로 등록</h2>
          <table>
            <thead>
              <tr>
                <th>타입</th>
                <th>제목</th>
                <th>요약</th>
                <th>포인트</th>
                <th>등록</th>
              </tr>
            </thead>
            <tbody>
              <form action="/admin/service/new" method="POST">
                <tr>
                  <td>
                    <select name="type">
                      <option value="package">패키지</option>
                      <option value="product">상품</option>
                    </select>
                  </td>
                  <td><input type="text" name="title" placeholder="제목"></td>
                  <td><input type="text" name="summary" placeholder="요약"></td>
                  <td><input type="text" name="point" placeholder="포인트"></td>
                  <td><button>등록</button></td>
                </tr>
              </form>
            </tbody>
          </table>
        </div>
      </article>
    </main>
    <%- include('../../../footer') %>
  </body>
</html>