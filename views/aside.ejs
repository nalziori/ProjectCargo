<style>
  <% if (locals.setting.theme === 'black') { %>
  aside .user {
    color: #fff;
    background-color: rgba(255, 255, 255, 0.1);
  }
  aside .info .nickName {
    color: rgba(255, 255, 255, 0.7);
  }
  aside .info .permission {
    color: rgba(255, 255, 255, 0.7);
  }
  aside .inputs input {
    color: rgba(255, 255, 255, 0.7);
    background-color: rgba(255, 255, 255, 0.1);
  }
  aside .userMenu div,
  aside .alarm,
  aside .message,
  aside .admin {
    color: rgba(255, 255, 255, 0.7);
    background-color: rgba(0, 0, 0, 0.3);
  }
  aside .userMenu a:hover,
  aside .userMenu a:active,
  aside .alarm a:hover,
  aside .alarm a:active,
  aside .message a:hover,
  aside .message a:active,
  aside .admin a:hover,
  aside .admin a:active {
    background-color: rgba(0, 0, 0, 0.5);
  }
  aside .getAlarm {
    background-color: yellow;
  }
  aside .getAlarm a:hover,
  aside .getAlarm a:active {
    background-color: yellow;
  }
  aside .joinAndFindPassword,
  aside .joinAndFindPassword a {
    color: rgba(255, 255, 255, 0.3);
  }
  aside .joinAndFindPassword a:hover {
    color: rgba(255, 255, 255, 0.5);
  }
  aside .chatContainer {
    background-color: rgba(255, 255, 255, 0.1);
  }
  aside .chatBanner {
    color: rgba(255, 255, 255, 0.5);
  }
  aside .messageBox .msg {
    color: rgba(255, 255, 255, 0.7);
    background-color: rgba(255, 255, 255, 0.1);
  }
  aside .chatExpand {
    color: rgba(255, 255, 255, 0.7);
    background-color: rgba(255, 255, 255, 0.03);
    border: 0;
  }
  <% } %>
</style>
<% if (mobile) { %>
<aside class="desktopHide">
<% } else if (!locals.setting.useChat) { %>
<aside class="mobileHide">
<% } else { %>
<aside>
<% } %>
  <div class="userBox">
    <!-- <h2>로그인</h2> -->
    <% if (locals.user) { %>
    <div class="user">
      <div class="info">
        <div class="detail">
          <% if (locals.user.image) { %>
            <div class="userImage" style="background-image: url('<%= s3Host %>/userImage/<%= locals.user.image %>');"></div>
          <% } else { %>
            <div class="userImage" style="background-image: url('/assets/userImage.svg');"></div>
          <% } %>
          <div class="nickName">
            <div><%= locals.user.nickName %></div>
          </div>
        </div>
        <div class="permission">회원등급 : <%= locals.user.permissionName %></div>
      </div>
      <div class="userMenu">
        <div class="mypage"><a href="/mypage">마이페이지</a></div>
        <div class="logout"><a href="/logout">로그아웃</a></div>
      </div>
      <% const globalAlarms = locals.alarms.filter(a => a.status === 1) %>
      <div class="alarm <% if (globalAlarms.length) { %> getAlarm<% } %>">
        <a href="/alarm">
          <% newAlarms = locals.alarms.filter(a => a.status === 1) %>
          <% if (newAlarms.length) { %>
          <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="bell" class="svg-inline--fa fa-bell fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M439.39 362.29c-19.32-20.76-55.47-51.99-55.47-154.29 0-77.7-54.48-139.9-127.94-155.16V32c0-17.67-14.32-32-31.98-32s-31.98 14.33-31.98 32v20.84C118.56 68.1 64.08 130.3 64.08 208c0 102.3-36.15 133.53-55.47 154.29-6 6.45-8.66 14.16-8.61 21.71.11 16.4 12.98 32 32.1 32h383.8c19.12 0 32-15.6 32.1-32 .05-7.55-2.61-15.27-8.61-21.71zM67.53 368c21.22-27.97 44.42-74.33 44.53-159.42 0-.2-.06-.38-.06-.58 0-61.86 50.14-112 112-112s112 50.14 112 112c0 .2-.06.38-.06.58.11 85.1 23.31 131.46 44.53 159.42H67.53zM224 512c35.32 0 63.97-28.65 63.97-64H160.03c0 35.35 28.65 64 63.97 64z"></path></svg>
          <span>새 알림 도착</span>
          <% } else { %>
          <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="bell" class="svg-inline--fa fa-bell fa-w-14" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M439.39 362.29c-19.32-20.76-55.47-51.99-55.47-154.29 0-77.7-54.48-139.9-127.94-155.16V32c0-17.67-14.32-32-31.98-32s-31.98 14.33-31.98 32v20.84C118.56 68.1 64.08 130.3 64.08 208c0 102.3-36.15 133.53-55.47 154.29-6 6.45-8.66 14.16-8.61 21.71.11 16.4 12.98 32 32.1 32h383.8c19.12 0 32-15.6 32.1-32 .05-7.55-2.61-15.27-8.61-21.71zM67.53 368c21.22-27.97 44.42-74.33 44.53-159.42 0-.2-.06-.38-.06-.58 0-61.86 50.14-112 112-112s112 50.14 112 112c0 .2-.06.38-.06.58.11 85.1 23.31 131.46 44.53 159.42H67.53zM224 512c35.32 0 63.97-28.65 63.97-64H160.03c0 35.35 28.65 64 63.97 64z"></path></svg>
          <span>알림 없음</span>
          <% } %>
        </a>
      </div>
      <div class="message">
        <a href="/message">
          <svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="envelope" class="svg-inline--fa fa-envelope fa-w-16" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M464 64H48C21.49 64 0 85.49 0 112v288c0 26.51 21.49 48 48 48h416c26.51 0 48-21.49 48-48V112c0-26.51-21.49-48-48-48zm0 48v40.805c-22.422 18.259-58.168 46.651-134.587 106.49-16.841 13.247-50.201 45.072-73.413 44.701-23.208.375-56.579-31.459-73.413-44.701C106.18 199.465 70.425 171.067 48 152.805V112h416zM48 400V214.398c22.914 18.251 55.409 43.862 104.938 82.646 21.857 17.205 60.134 55.186 103.062 54.955 42.717.231 80.509-37.199 103.053-54.947 49.528-38.783 82.032-64.401 104.947-82.653V400H48z"></path></svg>
          <span>메시지</span>
        </a>
      </div>
      <div class="Kakao_Vet_Auth">
        <a href="https://pf.kakao.com/_kixhxkb/chat"><img src="/assets/social/kakao.svg" onerror="this.style.display='none';" style="width:30px; height:30px;"/><span> 카카오톡 채널로 인증하기</span></a>
      </div>
      <% if (locals.user?.isAdmin) { %>
      <div class="admin"><a href="/admin">관리자</a></div>
      <% } %>
    </div>
    <% } else { %>
    <div class="inputsAndButtons">
      
      <!--<form action="/login" method="POST">
        <div class="inputs">
          <input type="text" name="keyword" placeholder="아이디 또는 이메일">
          <input type="password" name="password" placeholder="비밀번호">
        </div>-->
    
        <div class="buttons">
          <a href="/login"><button type="button" name="login" class="login">로그인</button></a>
        </div>
    
    </div>
    
    <!--<<div class="joinAndFindPassword">
      <div class="join"><a href="/join">회원가입</a></div>
      div class="findPassword"><a href="/findId">아이디 찾기</a> / <a href="/findPassword">비밀번호 찾기</a></div>
   
    
    </div> -->

    <% } %>
  </div>
  <% if (locals.setting.useTestMode) { %>
  <section class="testMode">
    <div class="bold">테스트 계정</div>
    <div>아이디 : test</div>
    <div>비밀번호 : test</div>
  </section>
  <% } %>

  
  <% if (!mobile && locals.setting.useChat) { %>
  <div class="chatContainer">
    <div class="chatBanner"><div>실시간채팅</div><div id="userCount" class="userCount"></div></div>
    <div class="chatBox" id="chatBox">
      <% if (locals.setting.theme === 'white') { %>
      <iframe src="/chatWindow.html" id="chatWindow" class="chatWindow"></iframe>
      <% } else if (locals.setting.theme === 'black') { %>
      <iframe src="/chatWindowBlack.html" id="chatWindow" class="chatWindow"></iframe>
      <% } %>
    </div>
    <% if (locals.user) { %>
    <div class="messageBox">
      <input type="text" name="msg" id="msg" class="msg" onkeydown="moveFocus('send')" placeholder="채팅 입력">
      <button name="submit" id="send" class="send" onkeydown="moveFocus('msg')">전송</button>
    </div>
    <% } else { %>
    <div class="messageBox">
      <input type="text" name="msg" id="msg" class="msg" onkeydown="moveFocus('send')" placeholder="로그인 필요" disabled>
      <button name="submit" id="send" class="send" onkeydown="moveFocus('msg')" disabled>전송</button>
    </div>
    <% } %>
    <div class="chatExpand" id="chatExpand">채팅방 펼치기</div>
  </div>
  <% } %>
  <% if (locals.setting.adsenseSide) { %>
  <div class="adsense"<% if (!mobile) { %> id="desktop"<% } %>>
    <%- locals.setting.adsenseSide %>
  </div>
  <% } %>
  <% if (locals.banners.filter(b => b.position === 'sideTop').length) { %>
  <div<% if (!mobile) { %> class="mobileHide"<% } %>>
    <%- include('banner', { position: 'sideTop' }); %>
  </div>
  <% } %>
  <div<% if (!mobile) { %> class="mobileHide"<% } %>>
    <%- include('./indexBoard/indexBoardGroup', { indexBoardGroups: locals.sideBoards }); %>
  </div>
  <% if (locals.banners.filter(b => b.position === 'sideBottom').length) { %>
  <div<% if (!mobile) { %> class="mobileHide"<% } %>>
    <%- include('banner', { position: 'sideBottom' }); %>
  </div>
  <% } %>
</aside>
